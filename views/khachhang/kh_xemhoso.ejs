<%- include('../partials/kh_trangdau') %>
    <div class="container mt-5">
        <div class="mt-4">
            <div class="row">
                <div class="col">
                    <div class="mt-4">
                        <h2 class="mb-4">Tổng quan </h2>
                         <div class="card-tq">
                            <div class="item item--1">
                                <div class="quantity">
                                    <%= tongSanPhamDaMua %> +
                                </div>
                                <div class="text text--1">
                                    Sản phẩm đã mua
                                </div>
                            </div>
                            <div class="item item--2">
                                <div class="quantity">
                                    <%= tongSanPhamYeuThich %> +
                                </div>
                                <div class="text text--2">
                                    Sản phẩm đã thích
                                </div>
                            </div>
                            <div class="item item--3">
                                <div class="quantity">
                                    <%= tongSanPhamDaDanhGia %> +
                                </div>
                                <div class="text text--3">
                                    Đã đánh giá
                                </div>
                            </div>
                            <% function formatCurrency(amount) { return new Intl.NumberFormat('vi-VN', { style: 'decimal' ,
                                currency: 'VND' }).format(amount); } %>
                                <div class="item item--4">
                                    <div class="quantity">
                                        <%= formatCurrency(tongSoTienDaMua) %> VND
                                    </div>
                                    <%if(tongSoTienDaMua>= 3000000){%>
                                        <div class="text text--4">
                                            Khách hàng kim cương
                                        </div>
                                        <%} else if(tongSoTienDaMua>= 2000000){%>
                                            <div class="text text--4">
                                                Khách hàng bạch kim
                                            </div>
                                            <%}else if(tongSoTienDaMua>= 1500000){%>
                                                <div class="text text--4">
                                                    Khách hàng vàng
                                                </div>
                                                <%}else{%>
                                                    <div class="text text--4">
                                                        Khách hàng thường
                                                    </div>
                                                    <%}%>
                                </div>
                        </div>
                         </div>
                </div>
                <div class="col chuyendoi">
                    <div class="mt-4">
                        <div class="row">
                            <% if (message) { %>
                                <div class="alert alert-success"><%= message %></div>
                              <% } %>
                              
                            <h2 class="mb-4">Xem và cập nhật hồ sơ</h2>
                            <div class="col">
                                <form action="/khachhang/kh_xemhoso" method="POST" enctype="multipart/form-data">
                                    <div class="form-group mb-3">
                                        <label for="anh_kh">Ảnh:</label>
                                        <input type="file" id="anh_kh" name="anh_kh" class="">
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="ten_kh">Tên khách hàng:</label>
                                        <input type="text" id="ten_kh" name="ten_kh" class=""
                                            value="<%= hoSoKhachHang.TEN_KH %>" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="email_kh">Email:</label>
                                        <input type="email" id="email_kh" name="email_kh" class=""
                                            value="<%= hoSoKhachHang.GMAIL_KH %>" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="sdt_kh">Số điện thoại:</label>
                                        <input type="text" id="sdt_kh" name="sdt_kh" class=""
                                            value="<%= hoSoKhachHang.SDT_KH %>" required>
                                    </div>
                                    <div class="form-group mb-3">
                                        <label for="diachi_kh">Địa chỉ:</label>
                                        <textarea id="diachi_kh" name="diachi_kh" class="form-control" rows="3"
                                            required><%= hoSoKhachHang.DIACHI_KH %></textarea>
                                    </div>
                                    <button type="submit" class="btn-bt">Cập nhật</button>
                                </form>
                            </div>
                            <div class="col ">
                                <div class="card-hs">
                                    <div class="blob"></div>
                                    <img class="img" src=" <%= hoSoKhachHang.ANH %>" alt="">
                                    <div>Khách hàng</div>
                                    <div class="ten_kh">
                                        <%= hoSoKhachHang.TEN_KH %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 
    <%- include('../partials/kh_trangcuoi') %>