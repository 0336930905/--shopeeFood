  <script>
    // Gọi API để lấy số lượng đơn hàng mới và cập nhật trong menu điều hướng
    fetch('/nhanvien/donhangmoi')
      .then(response => response.json())
      .then(data => {
        const orderCount = document.getElementById('order-count');
        orderCount.textContent = ` (${data.count})`;
      })
      .catch(error => {
        console.error('Lỗi khi lấy số lượng đơn hàng mới:', error);
      });
      fetch('/nhanvien/nguyenlieusaphet')
      .then(response => response.json())
      .then(data => {
        const nguyenlieuCount = document.getElementById('nguyenlieu-count');
        nguyenlieuCount.textContent = ` (${data.count})`;
      })
      .catch(error => {
        console.error('Lỗi khi lấy số lượng nguyên liệu sắp hết:', error);
      });
              // Function to set active state
              function setActive(element) {
            // Lưu href của phần tử được click vào Local Storage
            localStorage.setItem('activeMenu', element.getAttribute('href'));

            // Xóa lớp active từ tất cả các phần tử
            document.querySelectorAll('.menu-kh--value').forEach((el) => {
                el.classList.remove('active');
            });

            // Thêm lớp active vào phần tử được click
            element.classList.add('active');
        }

        // Khi tải lại trang, kiểm tra Local Storage và thiết lập trạng thái active
        document.addEventListener('DOMContentLoaded', () => {
            const activeMenu = localStorage.getItem('activeMenu');
            if (activeMenu) {
                const activeElement = document.querySelector(`.menu-kh--value[href='${activeMenu}']`);
                if (activeElement) {
                    activeElement.classList.add('active');
                }
            }
        });
  </script>