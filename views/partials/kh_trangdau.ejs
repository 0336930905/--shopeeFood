<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Khách Hàng</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- FontAwesome CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">

                <a class="navbar-brand" href="/">Cửa Hàng</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <div class="menu-kh">
                            <a class="menu-kh--value" href="/khachhang/kh_sanpham" onclick="setActive(this)">Sản
                                phẩm</a>
                            <a class="menu-kh--value" href="/khachhang/kh_danhgia" onclick="setActive(this)">Đánh
                                giá</a>
                            <a class="menu-kh--value" href="/khachhang/kh_yeuthich" onclick="setActive(this)">Yêu
                                thích</a>
                            <a class="menu-kh--value" href="/khachhang/kh_xemhoso" onclick="setActive(this)"> Hồ sơ</a>
                            <a class="menu-kh--value" href="/khachhang/kh_xemdondadat" onclick="setActive(this)">Đơn
                                hàng</a>
                            <a class="menu-kh--value" href="/dangxuat" onclick="setActive(this)">Đăng xuất</a>
                        </div>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <script>
        // Function to set active state
        function setActive(element) {
            // Lưu href của phần tử được click vào Local Storage
            localStorage.setItem('activeMenu', element.getAttribute('href'));

            // Xóa lớp active từ tất cả các phần tử
            document.querySelectorAll('.menu-kh--value').forEach((el) => {
                el.classList.remove('active');
            });

            // Thêm lớp active vào phần tử được click
            element.classList.add('active');
        }

        // Khi tải lại trang, kiểm tra Local Storage và thiết lập trạng thái active
        document.addEventListener('DOMContentLoaded', () => {
            const activeMenu = localStorage.getItem('activeMenu');
            if (activeMenu) {
                const activeElement = document.querySelector(`.menu-kh--value[href='${activeMenu}']`);
                if (activeElement) {
                    activeElement.classList.add('active');
                }
            }
        });

    </script>